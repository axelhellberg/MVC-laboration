@model MVC_laboration.Models.PostModel
@{
    ViewBag.Title = "Visar inlägg av " + @Model.Author;
}
<partial name="_ClockPartial" />
<article>
    <div class="post-info">
        <span class="author">@Model.Author</span>
        <span class="timestamp">@Model.Timestamp</span>
    </div>

    <p>@Model.Content</p>
    <span class="Mood">@Model.Mood</span>
    <form method="post">
        <input type="submit" value="Radera" class="delete" asp-controller="Home" asp-action="Delete" asp-route-id="@Model.Id" />
    </form>
</article>